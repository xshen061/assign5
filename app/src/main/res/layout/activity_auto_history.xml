<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/histLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#83a8ef"
    tools:context="AutoHistoryActivity">


    <LinearLayout

        android:id="@+id/histListviewLayout"

        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView

            android:id="@+id/listView_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="false"

            android:layout_alignParentEnd="true"

            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"

            android:divider="#990033"

            android:dividerHeight="2px"

            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />
    </LinearLayout>

    <ProgressBar

        android:id="@+id/auto_progressBar"

        style="?android:attr/progressBarStyleHorizontal"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"

        android:layout_marginTop="200dp"

        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/autoHistFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/auto_progressBar">

    </FrameLayout>


</RelativeLayout>